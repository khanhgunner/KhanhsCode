<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SigninActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-193dp"
        tools:layout_editor_absoluteY="92dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/bg">

            <ImageView
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="93dp"
                android:src="@drawable/logo3"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="190dp"
                android:layout_marginRight="60dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="THE ARSENAL"
                android:textColor="#FF0000"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="230dp"
                android:layout_marginRight="60dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Once gunner always gunner"
                android:textColor="#B22222"
                android:textSize="16sp" />

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <EditText
                android:id="@+id/ho_input"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="240dp"
                android:layout_marginLeft="40dp"
                android:hint="Họ"
                android:background="@drawable/blue_border_rounded_cornwe"
                android:fontFamily="@font/poppins_regular"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingTop="14dp"
                android:paddingRight="5dp"
                android:paddingBottom="14dp"
                android:textColor="#B22222"
                android:textColorHint="#b0a9a9"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </EditText>

            <EditText
                android:id="@+id/ten_input"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="14dp"
                android:scrollHorizontally="true"
                android:background="@drawable/blue_border_rounded_cornwe"
                android:fontFamily="@font/poppins_regular"
                android:hint="Tên"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingTop="14dp"
                android:paddingRight="17dp"
                android:paddingBottom="14dp"
                android:textColor="#B22222"
                android:textColorHint="#b0a9a9"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/ho_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ho_input" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/blue_border_rounded_cornwe">
            <!--INPUT-->
            <EditText
                android:id="@+id/taikhoan_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:hint="Tên đăng nhập"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="17dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textColor="#B22222"
                android:textColorHint="#b0a9a9"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/blue_border_rounded_cornwe">
            <!--INPUT-->
            <EditText
                android:id="@+id/matkhau_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:maxLength="12"
                android:maxLines="1"
                android:paddingLeft="17dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textColor="#B22222"
                android:textColorHint="#b0a9a9"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/blue_border_rounded_cornwe">
            <!--INPUT-->
            <EditText
                android:id="@+id/nlmatkhau_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:hint="Nhập lại mật khẩu"
                android:inputType="textPassword"
                android:maxLength="12"
                android:maxLines="1"
                android:paddingLeft="17dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textColor="#B22222"
                android:textColorHint="#b0a9a9"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/blue_border_rounded_cornwe">
            <!--INPUT-->
            <EditText
                android:id="@+id/sodt_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:hint="Số điện thoại"
                android:inputType="text"
                android:maxLength="10"
                android:maxLines="1"
                android:paddingLeft="17dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textColor="#B22222"
                android:textColorHint="#b0a9a9"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/blue_border_rounded_cornwe">
            <!--INPUT-->
            <EditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:hint="Email"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="17dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textColor="#B22222"
                android:textColorHint="#b0a9a9"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="12sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/loginbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="Đăng Kí"
            android:textColor="#ffff"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>